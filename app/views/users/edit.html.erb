<% provide :page_title, 'Edit profile' %>
<% currently_at %>

<h1 class="mb-4">Edit profile</h1>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="row g-0">
        <div class="col-3 d-none d-md-block border-end">
          <div class="card-body">
            <h4 class="subheader">Settings</h4>
            <div class="list-group list-group-transparent">
              <a href="" class="list-group-item list-group-item-action d-flex align-items-center active">My Account</a>
            </div>
          </div>
        </div>
        <div class="col d-flex flex-column">

          <%= form_with model: @user, data: { turbo: false }, class: "card card-md", autoload: false do |f| %>
            <div class="card-body">
              <%= render 'shared/errors', object: @user %>
              <h2 class="mb-4">My Account</h2>
              <h3 class="card-title">Profile Details</h3>
              <div class="row align-items-center">
                <div class="col-auto"><span class="avatar avatar-xl" style="background-image: url(./static/avatars/000m.jpg)"></span>
                </div>
                <div class="col-auto"><a href="#" class="btn">
                  Change avatar
                </a></div>
                <div class="col-auto"><a href="#" class="btn btn-ghost-danger">
                  Delete avatar
                </a></div>
              </div>
              <h3 class="card-title mt-4"></h3>
                <div class="card-body">
                  <div class="col-6">
                    <div class="mb-3">
                      <%= f.label :name, class: 'form-label' %>
                      <%= f.text_field :name, placeholder: 'Name', class: f.object.errors[:name].any? ? 'form-control is-invalid' : 'form-control' %>
                    </div>
                    <div class="mb-3">
                      <%= f.label :email, class: 'form-label' %>
                      <%= f.email_field :email, placeholder: 'E-mail', class: f.object.errors[:email].any? ? 'form-control is-invalid' : 'form-control' %>
                    </div>

                    <div class="mb-3">
                      <%= f.label :password, class: 'form-label' %>
                        <%= f.password_field :password, class: f.object.errors[:password].any? ? 'form-control is-invalid' : 'form-control' %>
                    </div>

                    <div class="mb-3">
                      <%= f.label :password_confirmation, class: 'form-label' %>
                        <%= f.password_field :password_confirmation, class: f.object.errors[:password_confirmation].any? ? 'form-control is-invalid' : 'form-control' %>
                    </div>

                    <div class="mb-3">
                      <%= f.label :old_password, class: 'form-label' %>
                      <%= f.password_field :old_password, class: f.object.errors[:old_password].any? ? 'form-control is-invalid' : 'form-control' %>
                    </div>

                  </div>
                </div>

            </div>

            <div class="card-footer bg-transparent mt-auto">
              <div class="btn-list justify-content-end">
                <%= f.submit "Save", class: 'btn btn-primary'%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>