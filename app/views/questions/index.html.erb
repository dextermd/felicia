<% provide :page_title, 'Questions' %>
<% currently_at  %>

<h1 class="mb-4">Questions</h1>

<%= link_to 'New Question', new_question_path, class: 'btn btn-primary mb-3' %>

<% @questions.each do |question| %>
  <article class="card my-3" >
    <div class="card-body">
      <h4><%= question.title %></h4>

      <section class="card-text">
      <time datetime="<%=  question.formatted_created_at %>">
        <%= question.formatted_created_at %>
      </time>

      <p class="mu-2">
        <%= truncate strip_tags(question.body), length: 150, omission: '... (continued)'  %>
      </p>
      </section>
      <%= link_to 'Show', question_path(question), class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary' %>
      <%= link_to 'Delete', question_path(question),  class: 'btn btn-danger', data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
    </div>
  </article>
<% end %>

<%== pagy_bootstrap_nav @pagy %>
