
<%= form_with url: session_path, data: { turbo: false }, class: "card card-md", autoload: false do |f| %>
  <div class="card-body">
    <h2 class="card-title text-center mb-4">Sign in</h2>

    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, value: params[:email], placeholder: 'your@email.com', class: 'form-control' %>
    </div>

    <div class="mb-2">
        <%= f.label '', class:'form-label' %>
        <b>Password</b>
        <span class="form-label-description">
            <a href="">I forgot password</a>
        </span>

      <div class="pt-2">
        <%= f.password_field :password, placeholder: 'Your password', class: 'form-control' %>
      </div>
    </div>

    <div class="mb-2">
      <div class="form-check">
        <%= f.check_box :remember_me, class: 'form-check-input', value:1 %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    </div>

    <div class="form-footer">
      <%= f.submit "Sign in", class: 'btn btn-primary w-100'%>
    </div>
    
  </div>

  <div class="hr-text">or</div>
  <div class="card-body">

    </div>
<% end %>